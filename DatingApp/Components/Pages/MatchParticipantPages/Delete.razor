@page "/matchparticipants/delete"
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>MatchParticipant</h2>
    <hr />
    @if (matchparticipant is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">MatchId</dt>
            <dd class="col-sm-10">@matchparticipant.MatchId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@matchparticipant.UserId</dd>
        </dl>
        <EditForm method="post" Model="matchparticipant" OnValidSubmit="DeleteMatchParticipant" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(matchparticipant is null)">Delete</button> |
            <a href="/matchparticipants">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private MatchParticipant? matchparticipant;

    [SupplyParameterFromQuery]
    private int MatchParticipantId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        matchparticipant = await context.MatchParticipant.FirstOrDefaultAsync(m => m.MatchParticipantId == MatchParticipantId);

        if (matchparticipant is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMatchParticipant()
    {
        using var context = DbFactory.CreateDbContext();
        context.MatchParticipant.Remove(matchparticipant!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/matchparticipants");
    }
}
