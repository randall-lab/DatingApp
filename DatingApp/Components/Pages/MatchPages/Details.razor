@page "/matches/details"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "User")]

<PageTitle>Match Details</PageTitle>

<h1>Match Details</h1>

<div>
    @if (match is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">Date Matched</dt>
            <dd class="col-sm-10">
                <span>@match.MatchDate.ToShortDateString()</span>
            </dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">
                <span>@(match.Active ? "Active" : "Inactive")</span>
            </dd>

            <dt class="col-sm-2">User</dt>
            <dd class="col-sm-10">
                <span>@match.UserId_One</span>
            </dd>

            <dt class="col-sm-2">Partner</dt>
            <dd class="col-sm-10">
                <span>@match.UserId_Two</span>
            </dd>
        </dl>


        <div>
            <a href="@($"/matches/edit?matchid={match.MatchId}")">Edit</a> |
            <a href="@($"/matches")">Back to List</a>
        </div>
    }
</div>

@code {
    private Match? match;

    [SupplyParameterFromQuery]
    private int MatchId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        match = await context.Match.FirstOrDefaultAsync(m => m.MatchId == MatchId);

        if (match is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
