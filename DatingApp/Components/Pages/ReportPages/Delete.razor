@page "/reports/delete"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

@attribute [Authorize(Roles = "Administrator, User")]

<PageTitle>Delete Report</PageTitle>

<h1>Delete Report</h1>

@if (report is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p>
        @if (UserIsAdmin)
        {
            <span>Are you sure you want to <strong>permanently delete</strong> this report?</span>
        }
        else
        {
            <span>Are you sure you want to delete your report?</span>
        }
    </p>

    <div>
        <h2>Report Details</h2>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Reporter</dt>
            <dd class="col-sm-10">@report.ReporterId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Reported User</dt>
            <dd class="col-sm-10">@report.ReportedUserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Reason</dt>
            <dd class="col-sm-10">@report.Reason</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Reported Date</dt>
            <dd class="col-sm-10">@report.ReportedDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@report.Status</dd>
        </dl>

        <EditForm method="post" Model="report" OnValidSubmit="DeleteReport" FormName=@($"delete-report-{report.ReportId}")
                  Enhance>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/reports" class="btn btn-secondary ms-2">Cancel</a>
        </EditForm>
    </div>
}

@code {
    private Report? report;
    private bool UserIsAdmin;

    [SupplyParameterFromQuery]
    private int ReportId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        report = await context.Report.FirstOrDefaultAsync(m => m.ReportId == ReportId);

        if (report is null)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        UserIsAdmin = user.IsInRole("Administrator");
    }

    private async Task DeleteReport()
    {
        using var context = DbFactory.CreateDbContext();
        context.Report.Remove(report!);
        await context.SaveChangesAsync();

        // Redirect based on role
        if (UserIsAdmin)
        {
            NavigationManager.NavigateTo("/reports"); // back to moderation dashboard
        }
        else
        {
            NavigationManager.NavigateTo("/messages/overview"); // back to user’s view
        }
    }
}
