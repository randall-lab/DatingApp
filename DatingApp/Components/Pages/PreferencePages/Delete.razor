@page "/preferences/delete"
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Preference</h2>
    <hr />
    @if (preference is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@preference.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PreferredGender</dt>
            <dd class="col-sm-10">@preference.PreferredGender</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">MinAge</dt>
            <dd class="col-sm-10">@preference.MinAge</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">MaxAge</dt>
            <dd class="col-sm-10">@preference.MaxAge</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LocationRadius</dt>
            <dd class="col-sm-10">@preference.LocationRadius</dd>
        </dl>
        <EditForm method="post" Model="preference" OnValidSubmit="DeletePreference" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(preference is null)">Delete</button> |
            <a href="/preferences">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Preference? preference;

    [SupplyParameterFromQuery]
    private int PreferenceId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        preference = await context.Preference.FirstOrDefaultAsync(m => m.PreferenceId == PreferenceId);

        if (preference is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePreference()
    {
        using var context = DbFactory.CreateDbContext();
        context.Preference.Remove(preference!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/preferences");
    }
}
