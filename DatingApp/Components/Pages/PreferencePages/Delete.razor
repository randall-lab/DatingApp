@page "/preferences/delete"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Administrator")]


<PageTitle>Delete</PageTitle>

<h1>Delete Preference</h1>
<hr />

<p>Are you sure you want to delete this?</p>

@if (preference is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card" style="max-width:600px;">
        <div class="card-body">
            <h3>Preference Details</h3>

            <p><strong>Preferred Gender:</strong> @(string.IsNullOrEmpty(preference.PreferredGender) ? "Not set" : preference.PreferredGender)</p>
            <p><strong>Age Range:</strong> @preference.MinAge – @preference.MaxAge</p>
            <p><strong>Search Radius:</strong> @preference.LocationRadius km</p>

            <!-- Delete-->
            <EditForm method="post" Model="preference" OnValidSubmit="DeletePreference" FormName="delete" Enhance>
                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-danger" disabled="@(preference is null)">Delete</button>
                    <a href="/preferences" class="btn btn-secondary">Back to Preferences</a>
                </div>
            </EditForm>
        </div>
    </div>
}
@code {
    private Preference? preference;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        preference = await context.Preference.FirstOrDefaultAsync(m => m.PreferenceId == Id);

        if (preference is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePreference()
    {
        using var context = DbFactory.CreateDbContext();
        context.Preference.Remove(preference!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/preferences");
    }
}
