@page "/preferences/manage"
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<h3>Redirecting to your preferences...</h3>

@code {
    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        var userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (string.IsNullOrEmpty(userId))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        // Look up preference record for this user
        var preference = await context.Preference.FirstOrDefaultAsync(p => p.UserId == userId);

        if (preference is null)
        {
            Nav.NavigateTo("/preferences/create", forceLoad: true);
        }
        else
        {
            Nav.NavigateTo($"/preferences/details?id={preference.PreferenceId}", forceLoad: true);
        }
    }
}
