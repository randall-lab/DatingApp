@page "/blocks/create"
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Block</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Block" OnValidSubmit="AddBlock" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="blockerid" class="form-label">BlockerId:</label> 
                <InputText id="blockerid" @bind-Value="Block.BlockerId" class="form-control" /> 
                <ValidationMessage For="() => Block.BlockerId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="blockeduserid" class="form-label">BlockedUserId:</label> 
                <InputText id="blockeduserid" @bind-Value="Block.BlockedUserId" class="form-control" /> 
                <ValidationMessage For="() => Block.BlockedUserId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="blockeddate" class="form-label">BlockedDate:</label> 
                <InputDate id="blockeddate" @bind-Value="Block.BlockedDate" class="form-control" /> 
                <ValidationMessage For="() => Block.BlockedDate" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/blocks">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Block Block { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddBlock()
    {
        using var context = DbFactory.CreateDbContext();
        context.Block.Add(Block);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/blocks");
    }
}
