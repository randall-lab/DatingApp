@page "/matchcriteria/delete"
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>MatchCriteria</h2>
    <hr />
    @if (matchcriteria is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">MatchId</dt>
            <dd class="col-sm-10">@matchcriteria.MatchId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PreferenceId</dt>
            <dd class="col-sm-10">@matchcriteria.PreferenceId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ProfileId</dt>
            <dd class="col-sm-10">@matchcriteria.ProfileId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CriteriaType</dt>
            <dd class="col-sm-10">@matchcriteria.CriteriaType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CriteriaValue</dt>
            <dd class="col-sm-10">@matchcriteria.CriteriaValue</dd>
        </dl>
        <EditForm method="post" Model="matchcriteria" OnValidSubmit="DeleteMatchCriteria" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(matchcriteria is null)">Delete</button> |
            <a href="/matchcriteria">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private MatchCriteria? matchcriteria;

    [SupplyParameterFromQuery]
    private int MatchCriteriaId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        matchcriteria = await context.MatchCriteria.FirstOrDefaultAsync(m => m.MatchCriteriaId == MatchCriteriaId);

        if (matchcriteria is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteMatchCriteria()
    {
        using var context = DbFactory.CreateDbContext();
        context.MatchCriteria.Remove(matchcriteria!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/matchcriteria");
    }
}
