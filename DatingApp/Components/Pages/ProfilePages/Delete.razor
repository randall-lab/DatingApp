@page "/profiles/delete"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider


@attribute [Authorize(Roles = "Administrator")]


<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>

@if (profile is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card" style="max-width:600px;">
        <div class="card-body text-center">
        <!-- Show photo instead of raw URL -->
        @if (!string.IsNullOrEmpty(profile.PhotoURL))
        {
            <img src="@profile.PhotoURL" class="img-thumbnail mb-3" style="max-width:200px;" />
        }
        else
        {
            <p><em>No photo uploaded</em></p>
        }
        <h3>@profile.FirstName @profile.LastName</h3>
        <p><strong>Age:</strong> @profile.Age</p>
        <p><strong>Gender:</strong> @(string.IsNullOrEmpty(profile.Gender) ? "N/A" : profile.Gender)</p>
        <p><strong>Region:</strong> @(string.IsNullOrEmpty(profile.RegionName) ? "N/A" : profile.RegionName)</p>
        <p><strong>Bio:</strong> @(string.IsNullOrEmpty(profile.Bio) ? "No bio yet" : profile.Bio)</p>
        <p><strong>Interests:</strong> @(string.IsNullOrEmpty(profile.Interest) ? "No interests set" : profile.Interest)</p>
        <p><small>Last Active: @profile.LastActiveDate.ToString("g")</small></p>
        
        <!-- Delete form -->
        <EditForm method="post" Model="profile" OnValidSubmit="DeleteProfile" FormName="delete" Enhance>
            <div class="d-flex gap-2 justify-content-center mt-3">
            <button type="submit" class="btn btn-danger" disabled="@(profile is null)">Delete</button>
            <a href="/profiles" class="btn btn-secondary">Back to Profiles</a>
             </div>
        </EditForm>
        </div>
        </div>
    }
</div>

@code {
    private Profile? profile;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        profile = await context.Profile.FirstOrDefaultAsync(p => p.ProfileId == Id);

        if (profile is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteProfile()
    {
        using var context = DbFactory.CreateDbContext();
        context.Profile.Remove(profile!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/profiles");
    }
}
