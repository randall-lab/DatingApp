@page "/profiles/details"
@using DatingApp.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<DatingAppUser> UserManager


@attribute [Authorize(Roles = "Administrator,User")]


<PageTitle>Profile Details</PageTitle>

<h1>Profile Details</h1>
<hr />

@if (profile is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card" style="max-width:600px;">
        <div class="card-body text-center">
            <!-- Show photo instead of raw URL -->
            @if (!string.IsNullOrEmpty(profile.PhotoURL))
            {
                <img src="@profile.PhotoURL" class="img-thumbnail mb-3" style="max-width:200px;" />
            }
            else
            {
                <p><em>No photo uploaded</em></p>
            }

            <h3>@profile.FirstName @profile.LastName</h3>
            <p><strong>Age:</strong> @profile.Age</p>
            <p><strong>Gender:</strong> @(string.IsNullOrEmpty(profile.Gender) ? "N/A" : profile.Gender)</p>
            <p><strong>Region:</strong> @(string.IsNullOrEmpty(profile.RegionName) ? "N/A" : profile.RegionName)</p>

            <p><strong>Bio:</strong> @(string.IsNullOrEmpty(profile.Bio) ? "No bio yet" : profile.Bio)</p>
            <p><strong>Interests:</strong> @(string.IsNullOrEmpty(profile.Interest) ? "No interests set" : profile.Interest)</p>

            <p><small>Last Active: @profile.LastActiveDate.ToString("g")</small></p>

            <div class="mt-3">
                <a class="btn btn-primary" href="@($"/profiles/edit?id={profile.ProfileId}")">Edit</a>
                @if (UserIsAdmin)
                {
                    <a href="@($"/profiles")" class="btn-action back">Back to List</a>
                    <a href="@($"profiles/delete?id={profile.ProfileId}")" class="btn-action delete">Delete</a>
                }
            </div>
        </div>
    </div>
}

@code {
    private Profile? profile;
    private bool UserIsAdmin;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        if (user == null)
        { 
            // Not logged in, redirect or handle gracefully 
            NavigationManager.NavigateTo("login"); 
            return; 
        } 
        var userId = await UserManager.GetUserIdAsync(user); 
        UserIsAdmin = await UserManager.IsInRoleAsync(user, "Administrator");

        if (UserIsAdmin)
        { 
            // Admin can fetch by Id parameter 
            profile = await context.Profile.FirstOrDefaultAsync(p => p.ProfileId == Id); 
        } 
        else 
        { 
            // Normal user: always fetch their own record 
            profile = await context.Profile.FirstOrDefaultAsync(p => p.UserId == userId); 

            if (profile == null) 
            { 
                NavigationManager.NavigateTo("notfound"); 
                return; 
            } 
        }
    }
}
