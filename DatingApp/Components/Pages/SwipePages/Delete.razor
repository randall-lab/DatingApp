@page "/swipes/delete"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using DatingApp.Domain
@inject IDbContextFactory<DatingApp.Data.DatingAppContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Administrator")]

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Swipe</h2>
    <hr />
    @if (swipe is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId_From</dt>
            <dd class="col-sm-10">@swipe.UserId_From</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserId_To</dt>
            <dd class="col-sm-10">@swipe.UserId_To</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsLiked</dt>
            <dd class="col-sm-10">@swipe.IsLiked</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SwipeDate</dt>
            <dd class="col-sm-10">@swipe.SwipeDate</dd>
        </dl>
        <EditForm method="post" Model="swipe" OnValidSubmit="DeleteSwipe" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(swipe is null)">Delete</button> |
            <a href="/swipes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Swipe? swipe;

    [SupplyParameterFromQuery]
    private int SwipeId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        swipe = await context.Swipe.FirstOrDefaultAsync(m => m.SwipeId == SwipeId);

        if (swipe is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteSwipe()
    {
        using var context = DbFactory.CreateDbContext();
        context.Swipe.Remove(swipe!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/swipes");
    }
}
