@using DatingApp.Data
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Identity
@inject NavigationManager NavigationManager
@inject SignInManager<DatingAppUser> SignInManager
@inject IHttpContextAccessor HttpContextAccessor

<div class="nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/main" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/profiles/details">
                <span class="bi bi-person-fill-nav-menu"></span> Profile
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/preferences/details">
                <span class="bi bi-gear-fill-nav-menu"></span> Preferences
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/swipe">
                <span class="bi bi-heart-fill-nav-menu"></span> Swipe
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <button class="nav-link" @onclick="Logout">
                        <span class="bi bi-box-arrow-right"></span> Logout
                    </button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private async Task Logout()
    {
        // Clear the Identity cookie explicitly
        await HttpContextAccessor.HttpContext!.SignOutAsync(IdentityConstants.ApplicationScheme);

        // Also call SignInManager for consistency
        await SignInManager.SignOutAsync();

        // Redirect to landing page
        NavigationManager.NavigateTo("/", true);
    }
}
