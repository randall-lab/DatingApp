@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="page">
    @if (ShowSidebar())
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool ShowSidebar()
    {
        var url = NavigationManager.Uri.ToLower();

        // ✅ Only show sidebar on these pages
        return url.Contains("/profiles") ||
               url.Contains("/preferences") ||
               url.Contains("/swipe") ||
               url.Contains("/matches") ||
               url.Contains("/messages");
    }
}
