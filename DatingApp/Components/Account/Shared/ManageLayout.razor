@inherits LayoutComponentBase
@layout AccountLayout
@inject NavigationManager NavigationManager

<div class="page">
    @if (ShowSidebar())
    {
        <div class="sidebar">
            <ManageNavMenu />
        </div>
    }

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool ShowSidebar()
    {
        var url = NavigationManager.Uri.ToLower();

        // ✅ Only show sidebar on manage pages, hide on AccessDenied
        return url.Contains("/account/manage") ||
               url.Contains("/account/manage/email") ||
               url.Contains("/account/manage/changepassword") ||
               url.Contains("/account/manage/externalLogins") ||
               url.Contains("/account/manage/twofactorauthentication") ||
               url.Contains("/account/manage/personaldata");
    }
}